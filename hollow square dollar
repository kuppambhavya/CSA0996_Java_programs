public class HollowSquareDollarPattern {
    public static void main(String[] args) {
        int n = 5;
        char symbol = '$';

        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= n; j++) {
                if (i == 1 || i == n || j == 1 || j == n) {
                    System.out.print(symbol);
                } else {
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
    }
}
